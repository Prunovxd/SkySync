<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BluetoothApp.MainPage">

    <StackLayout Padding="10">
        <Button Text="Connect" Clicked="ConnectButton_Clicked"/>
        <Button Text="Send" Clicked="SendButton_Clicked"/>
        <Button Text="Disconnect" Clicked="DisconnectButton_Clicked"/>
        <Button Text="Open Map" Clicked="OpenMapButton_Clicked"/>
        <WebView x:Name="myWebView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
    </StackLayout>

</ContentPage>
